# Backend Environment Variables

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=afework_pharma
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM=noreply@afeworkpharmaet.com
EMAIL_FROM_NAME=Afework Pharma

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://www.afeworkpharmaet.com,https://afeworkpharmaet.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Session Configuration
SESSION_SECRET=your_session_secret_key_here_change_in_production
SESSION_MAX_AGE=86400000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,webp,pdf,doc,docx

# Logging
LOG_LEVEL=debug

# Backup
BACKUP_DIR=./backups

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@afeworkpharmaet.com

# Security
CSP_REPORT_URI=http://localhost:3000/csp-report
ENABLE_HELMET=true
ENABLE_CORS=true
