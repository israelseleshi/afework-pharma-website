# Afework Pharma Website - Production Environment Configuration
# Copy this file to .env and update the values for your production environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_USER=afeworcn_afework_admin
DB_PASSWORD=your_secure_database_password_here
DB_NAME=afeworcn_afework_content

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate a strong JWT secret: openssl rand -base64 64
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this_in_production

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
# SMTP Server Configuration
EMAIL_HOST=afeworkpharmaet.com
EMAIL_PORT=587
EMAIL_USER=contact@afeworkpharmaet.com
EMAIL_PASS=your_email_password_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Node.js Environment
NODE_ENV=production

# Server Port (cPanel will provide this automatically)
PORT=3001

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size in bytes (5MB = 5242880 bytes)
MAX_FILE_SIZE=5242880

# Allowed file types
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,webp,pdf,doc,docx

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=https://www.afeworkpharmaet.com,https://afeworkpharmaet.com,http://localhost:3000,http://localhost:5173

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup directory path
BACKUP_DIR=./backups

# =============================================================================
# ADMIN USER CONFIGURATION
# =============================================================================
# Default admin user (change these in production)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@afeworkpharmaet.com

# =============================================================================
# SECURITY HEADERS
# =============================================================================
# Content Security Policy
CSP_REPORT_URI=https://afeworkpharmaet.com/csp-report

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Error tracking (optional)
# SENTRY_DSN=your_sentry_dsn_here

# Analytics (optional)
# GOOGLE_ANALYTICS_ID=your_ga_id_here
